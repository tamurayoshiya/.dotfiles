{
    "suggest.noselect": true,
    "suggest.preferCompleteThanJumpPlaceholder": true,
    "languageserver": {
        "reason": {
            "command": "~/.dotfiles/lib/reason-language-server/reason-language-server-darwin",
            "filetypes": ["reason"]
        },
        "rescript": {
            "enable": true,
            "module": "~/.vim/bundle/repos/github.com/rescript-lang/vim-rescript/rescript-vscode/extension/server/out/server.js",
            "args": ["--node-ipc"],
            "filetypes": ["rescript"],
            "rootPatterns": ["bsconfig.json"]
        },
        "terraform": {
            "command": "~/.dotfiles/lib/terraform-lsp/terraform-lsp-darwin",
            "filetypes": ["terraform"]
        }
    },
    "coc.preferences.formatOnType": true,
    "coc.preferences.formatOnSaveFiletypes": [
        "typescript",
        "typescriptreact",
        "javascript",
        "go"
    ],
    "eslint.enable": false,
    "go.goplsOptions": {
        "completeUnimported": true
    },
    "typescript.format.enabled": false,
    "rust-analyzer.inlayHints.enable": false,
    "rust-analyzer.inlayHints.parameterHints.enable": false,
    "rust-analyzer.inlayHints.typeHints.enable": false
}
